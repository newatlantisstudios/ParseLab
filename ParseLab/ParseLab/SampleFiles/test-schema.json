{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "person"],
  "properties": {
    "title": {
      "type": "string"
    },
    "person": {
      "type": "object",
      "required": ["name", "age", "email"],
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "minimum": 0
        },
        "is_active": {
          "type": "boolean"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      }
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zip": {
          "type": "string"
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "daily_backup_time": {
          "type": "string",
          "format": "time"
        }
      }
    },
    "tags": {
      "type": "object",
      "properties": {
        "favorites": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}